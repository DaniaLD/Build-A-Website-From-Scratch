
        <div class="row pt-5 justify-content-center">
            <div class="col-8">
                    <div class="card card-default">
                            <div class="card-header"><h4>بازیابی رمز عبور</h4></div>
                            <div class="card-body">
                                    <form action="/auth/password/reset" method="POST" class="form form-horizontal">
                                            <% include ./../../layout/error-messages.ejs %>

                                            <input type="hidden" name="token" value="<%= token %>">

                                            <div class="form-group">
                                                    <label class="control-label">ادرس ایمیل</label>
                                                    <input type="email" name="email" class="form-control" required>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">پسورد جدید</label>
                                                <input type="password" name="password" class="form-control" required>
                                            </div>

                                            <div class="form-group">
                                                    <%- recaptcha %>
                                            </div>

                                            <div>
                                                    <button type="submit" class="btn btn-primary">ریست</button>
                                            </div>
                                    </form>
                            </div>
                    </div>
            </div>  
    </div>
