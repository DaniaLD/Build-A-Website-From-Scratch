<% include ./../layout/header.ejs %>

        <div class="container">
                <div class="row pt-5 justify-content-center">
                        <div class="col-8">
                                <div class="card card-default">
                                        <div class="card-header"><h4>ورود به سایت</h4></div>
                                        <div class="card-body">
                                                <form action="/login" method="POST" class="form form-horizontal">
                                                        <% if(messages.length) { %>
                                                                <div class="alert alert-danger alert-dismissible">
                                                                        <button type="button" aria-label="close" class="close" data-dismiss="alert">
                                                                                <span>x</span>
                                                                        </button>
                                                                <% messages.forEach(element => {%>
                                                                        <%= element  %><br>
                                                                <% })%>
                                                                </div>
                                                        <% } %>
                                                        <div class="form-group">
                                                                <label class="control-label">ایمیل</label>
                                                                <input type="email" name="email" class="form-control" required>
                                                        </div>

                                                        <div class="form-group">
                                                                <label class="control-label">پسورد</label>
                                                                <input type="password" name="password" class="form-control" required>
                                                        </div>

                                                        <div>
                                                                <button type="submit" class="btn btn-success">ورود</button>
                                                        </div>
                                                </form>
                                        </div>
                                </div>
                        </div>  
                </div>
        </div>
        
<% include ./../layout/footer.ejs %>